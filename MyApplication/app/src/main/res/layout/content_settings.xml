<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="34dp"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:text="Save" />

    <EditText
        android:id="@+id/number1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        android:ems="10"
        android:inputType="number"
        android:hint="6471237895" />

    <EditText
        android:id="@+id/number2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/save"
        android:layout_alignStart="@+id/number1"
        android:layout_marginBottom="45dp"
        android:ems="10"
        android:inputType="number"
        android:hint="6478954561" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/number2"
        android:layout_alignStart="@+id/number2"
        android:layout_marginBottom="17dp"
        android:text="Number 2"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/message"
        android:layout_alignStart="@+id/message"
        android:layout_marginBottom="15dp"
        android:text="Message"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/number1"
        android:layout_alignStart="@+id/number1"
        android:layout_marginBottom="18dp"
        android:text="Number 1"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/message"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_above="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="Enter Help Message Here"/>

</RelativeLayout>
